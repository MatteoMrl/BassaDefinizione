{{#if userFilms}} 
<main>
  <aside>
      <div id="genresLegend"><h1>GENRES</h1></div>
      <ul>
      <li id="">All genres</li>
      {{#each userGenres}}
      <li id="{{this}}">{{this}}</li>
      {{/each}}
      </ul>
  </aside>
  <article>
    <div id="title"><h1>MOVIES YOU LIKED</h1></div>
    <section id="favouriteFilms">
    {{#each userFilms}}
      <div class="card" id="{{this.Genre}}">
        <img class="card-img-top" src="{{this.Poster}}" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{this.Title}}</h5>
          <p class="card-text" id="rating">{{this.imdbRating}} <i class="far fa-star"></i>
        </div>
        <a href="/search?title={{this.Title}}" class="btn">FIND OUT MORE</a>
      </div>
    {{/each}}
    </section>
  </article>
</main>
{{else}}

<div id="noFilm"><h1>you haven't <span>voted</span> any movie yet.</h1></div>

{{/if}}